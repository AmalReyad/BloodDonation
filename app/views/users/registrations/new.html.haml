- content_for :title, t('new_volunteerـsignup_page_title')

%script{:src => "https://maps.googleapis.com/maps/api/js?sensor=false&amp;libraries=places", :type => "text/javascript"}
%link{:href => "//code.jquery.com/ui/1.11.0/themes/smoothness/jquery-ui.css", :rel => "stylesheet"}
%script{:src => "//code.jquery.com/ui/1.11.0/jquery-ui.js"}

:javascript
  function initialize() {
  var input = document.getElementById('searchTextField');
   var options = {
      componentRestrictions: {country: "eg"}
   };

  var autocomplete = new google.maps.places.Autocomplete(input, options);

  google.maps.event.addListener(autocomplete, 'place_changed', function () {
      var place = autocomplete.getPlace();
      document.getElementById('addName').value = document.getElementById('searchTextField').value;
      document.getElementById('addLat').value = place.geometry.location.lat();
      document.getElementById('addLng').value = place.geometry.location.lng();

     });
  }

  google.maps.event.addDomListener(window, 'load', initialize);

.row
  .column.column--center.large-8
    %h2
      = t('new_volunteerـsignup_page_title')

    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!

      .c-form-set
        = f.label :name, class: 'c-label'
        = f.text_field :name, autofocus: true, required: 'Enter your name', placeholder: 'Enter your name', class: 'c-input'

      .c-form-set
        = f.label :email, class: 'c-label'
        = f.email_field :email, autofocus: true, required: 'Enter your email', placeholder: 'Enter your email', class: 'c-input'

      .c-form-set
        = f.label :address, class: 'c-label'
        %input#searchTextField{autocomplete: 'on', placeholder: 'Enter a location', class: 'c-input', runat: 'server', size: '50', type: 'text'}
        = f.text_field :location_name, autofocus: true, id: 'addName', hidden: true
        = f.text_field :location_lat, autofocus: true, id: 'addLat', hidden: true
        = f.text_field :location_lng, autofocus: true, id: 'addLng', hidden: true

      .c-form-set
        = f.label :gender, class: 'c-label'
        = f.select :gender, options_for_select([[t('male'), 'male'], [t('female'), 'female']]), {}, {required: 'true', class: 'c-input'}

      .c-form-set
        = f.label :'blood type', class: 'c-label'
        = f.select(:blood_type, [['A+','A+'],['A-','A-'],
          ['B+','B+'],['B-','B-'],
          ['O+','O+'],['O-','O-'],
          ['AB+','AB+'],['AB-','AB-']], include_blank: t('choose_blood_type'))

      .c-form-set
        = f.label :'phone number', class: 'c-label'
        = f.text_field :phone, autofocus: true, required: 'Enter your mobile number', placeholder:'Enter your phone number', class: 'c-input'
      .c-form-set
        = f.label :'birth date', class: 'c-label'
        = f.text_field :birth_date, required: '', placeholder: 'Enter your Birth Date', id: 'datepicker', class: 'c-input'
        :javascript
          $(function() {
            $('#datepicker').datepicker({changeYear: true, yearRange : '-100:+0',dateFormat: 'yy-mm-dd'});
          });

      .c-form-set
        = f.label :'national ID', class: 'c-label'
        = f.text_field :nationalid, autofocus: true, required: 'Enter your national id', placeholder: 'Enter your national id', class: 'c-input'

      .c-form-set
        = f.label :'last donation date', class: 'c-label'
        = f.text_field :lastdonation, placeholder: 'Enter your last date of donation', id: 'picker', class: 'c-input'
        :javascript
          $(function() {
            $('#picker').datepicker({changeYear: true, yearRange : '-100:+0',dateFormat: 'yy-mm-dd'});
          });

      = f.number_field :num_of_active_requests, hidden: true, value: 0
      = f.date_field :created_at, value: Time.now.strftime("%Y-%m-%d"), hidden: true

      .c-form-set
        = f.label :password, class: 'c-label'
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
        %br/
        = f.password_field :password, autocomplete: 'off', class: 'c-input'

      .c-form-set
        = f.label :password_confirmation, class: 'c-label'
        = f.password_field :password_confirmation, autocomplete: 'off', class: 'c-input'

      .c-form-set
        = f.submit t('signup')

      = render 'users/shared/links'