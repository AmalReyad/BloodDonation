<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Faselty | <%= yield(:title) %></title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <%= stylesheet_link_tag    'admin', media: 'all'%> 
    <%= javascript_include_tag 'admin', 'data-turbolinks-track' => true %> 
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
          <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
          <![endif]-->
      </head>
      <body class="skin-blue">
        <!-- header logo: style can be found in header.less -->
        <header class="header">
            <a class="logo">
                <!-- Add the class icon to your logo image or logo icon to add the margining -->
                Faselty-Admin
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="navbar-right">
                    <ul class="nav navbar-nav">
                        
                        <!-- User Account: style can be found in dropdown.less -->
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="glyphicon glyphicon-user"></i>
                                <span>Faselty Admin <i class="caret"></i></span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header bg-light-blue">
                                    <img src="<%= asset_path( 'avatar3.png' ) %>" class="img-circle" alt="User Image" />
                                    <p>
                                        <% if current_admin.superadmin? %>
                                        Samar Ali - Faselty CEO 
                                        <% else %>
                                        Faselty Admin
                                        <% end %>
                                        <small><%= current_admin.email %></small>
                                    </p>
                                </li> 
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <% if  current_admin && current_admin.superadmin %> 
                                    <div class="pull-left">
                                    <a class='btn btn-default btn-flat' href="#" onclick="window.location.href = '/controls/edit_admin'">Login Info</a>
                                    </div>
                                    <% end %>
                                    <div class="pull-right">
                                       <%= link_to  "Sign out", destroy_admin_session_path, class: 'btn btn-default btn-flat'%>
                                   </div> 
                               </li>
                           </ul>
                       </li>
                   </ul>
               </div>
           </nav>
       </header>
       <div class="wrapper row-offcanvas row-offcanvas-left">
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="left-side sidebar-offcanvas">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="<%= asset_path( 'avatar3.png' ) %>" class="img-circle" alt="User Image" />
                    </div>
                    <div class="pull-left info">
                        <p>Hello, Admin</p>

                        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                    </div>
                </div>
                <!-- search form -->
                <%=form_for :controls, url: url_for( :controller => :admincommands, :action => :searchdonor ), :html => { :class => 'sidebar-form' } do |f| %> 

                <div class="input-group">
                    <%= f.text_field :search_tag, :required=>"", :placeholder=>"search donor" , class: 'form-control' %> 
                    <span class="input-group-btn">
                        <%= f.submit "", :id => 'search-btn',class: 'btn btn-flat' %>
                    </span>
                </div>

                <% end %> 
                <%=form_for :controls, url: url_for( :controller => :admincommands, :action => :searchcase ), :html => { :class => 'sidebar-form' } do |f| %> 

                <div class="input-group">
                    <%= f.text_field :search_tag, :required=>"", :placeholder=>"search case" , class: 'form-control' %> 
                    <span class="input-group-btn">
                        <%= f.submit "", :id => 'search-btn',class: 'btn btn-flat' %>
                    </span>
                </div>

                <% end %> 
                <!-- /.search form -->
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu">
                    <li class="active">
                        <a href="#" onclick="window.location.href = '/controls'">
                            <i class="fa fa-dashboard"></i> <span>Dashboard</span>
                        </a>
                    </li> 
                    <% if  current_admin && current_admin.superadmin %> 
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-laptop"></i>
                            <span>Admins</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="#" onclick="window.location.href = '/controls/newadmin'"><i class="fa fa-angle-double-right"></i>New admin</a></li>
                            <li><a href="#" onclick="window.location.href = '/controls/admins'"><i class="fa fa-angle-double-right"></i>Current admins</a></li>
                        </ul>
                    </li>
                    <% end %>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-edit"></i> <span>Cases</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="#" onclick="window.location.href = '/controls/activerequests'" ><i class="fa fa-angle-double-right"></i> Active with donors</a></li>
                            <li><a href="#" onclick="window.location.href = '/controls/requests'" ><i class="fa fa-angle-double-right"></i> Active without donors</a></li>
                            <li><a href="#" onclick="window.location.href = '/controls/expiredrequests'" ><i class="fa fa-angle-double-right"></i> Expired </a></li>
                            <li><a href="#" onclick="window.location.href = '/controls/deletecases'"><i class="fa fa-angle-double-right"></i> Delete cases </a></li>
                        </ul>
                    </li> 
                    <li class="treeview">
                        <a>
                            <i class="fa fa-laptop"></i>
                            <span>Create New</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="#" onclick="window.location.href = '/controls/newdonor'"><i class="fa fa-angle-double-right"></i> Donor</a></li>
                            <li><a href="#" onclick="window.location.href = '/controls/newcase'"><i class="fa fa-angle-double-right"></i> Case</a></li> 
                        </ul>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-calendar"></i>
                            <span>History</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="#" onclick="window.location.href = '/controls/donorshistory'"><i class="fa fa-angle-double-right"></i>Today registered donors</a></li>
                            <li><a href="#" onclick="window.location.href = '/controls/caseshistory'" ><i class="fa fa-angle-double-right"></i>Today registered cases</a></li> 
                        </ul>
                    </li> 
                    <li>
                        <a href="#" onclick="window.location.href = '/controls/chartsreports'">
                            <i class="fa fa-bar-chart-o"></i> <span>Charts</span> 
                        </a>
                    </li>
                    <li>
                        <a href="#" onclick="window.location.href = '/controls/mailform'">
                            <i class="fa fa-envelope"></i> <span>Mailbox</span> 
                        </a>
                    </li>
                    <li class="treeview">
                        <a href="#" onclick="window.location.href = '/controls/lockscreen'">
                            <i class="fa fa-laptop"></i> Lockscreen
                        </a>
                    </li>

                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>

        <!-- Right side column. Contains the navbar and content of the page -->

        <% if notice != nil %>
        <%= javascript_tag "show_notification_system('#{notice.to_s}');" %>
        <% end %> 

        <%- flash.each do |name, msg| -%>
        <% if msg == "Invalid email or password." %>
        <%= javascript_tag "show_notification_system('#{msg.to_s}');" %>
        <%- end -%>     
        <%- end -%>
        <%= yield %> 
    </div><!-- ./wrapper -->

    <!-- jQuery 2.0.2 -->

</body>
</html>