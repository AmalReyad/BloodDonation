<% if notice != nil %>
<%= javascript_tag "show_notification_system('#{notice.to_s}');" %>
<% end %>
 
<% if @new_requests.size != 0 %>

<h1>New Requests</h1>

<table width="80%">
  <thead>
    <tr> 
      <th>blood type</th>
      <th>Expire date</th>
      <th>Blood bag</th> 
      <th>Hospital name</th>  
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @new_requests.each do |request| %>
      <tr> 
        <td><%= request.blood_type %></td>
        <td><%= request.expiredate %></td>
        <td><%= request.bloodbag %></td>
        <td><%= request.hospital_name %></td>  
        <td><%= link_to 'Show', request %></td>
         <!-- <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <h1>No New Requests Found !!</h1>
<% end %>
<br> <hr> <br>

