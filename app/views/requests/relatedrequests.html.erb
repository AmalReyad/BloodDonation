<% content_for :title, "تبرعات فصيلتى" %> 

<h1>My blood type Requests</h1>

<table width="80%">
  <thead>
    <tr> 
      <th>blood type</th>
      <th>Expire date</th>
      <th>Blood bag</th> 
      <th>Hospital name</th>  
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr> 
        <td><%= request.blood_type %></td>
        <td><%= request.expiredate %></td>
        <td><%= request.bloodbag %></td>
        <td><%= request.hospital_name %></td>  
        <td><%= link_to 'Show', request %></td>
         <!-- <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table> 