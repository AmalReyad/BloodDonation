<% content_for :title, "New Admin" %>

<div align="center">
<h2>Create a new admin</h2>

<%=form_for :controls, url: url_for( :controller => :controls, :action => :create_new_admin ) do |f| %> 

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, :required => true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :required => true %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :required => true %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>

<% end %> 
</div>

