<% content_for :title, "Send Email" %>
<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Mail Form
            <small>Control panel</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#" onclick="window.location.href = '/controls'"><i class="fa fa-dashboard"></i> Home</a></li>
            <li>Dashboard</li>
            <li class="active">Mail Form</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
<br><br><br>
  <!-- Main content -->
  <section class="content">
<div align="center">
	<div class="box-body">
		<%=form_for :controls, url: url_for( :controller => :admincommands, :action => :sendemail ) do |f| %> 

		<div class="form-group">
			<%= f.text_field :user_email, :required => '', placeholder: 'Email to:' ,:style => "width: 80%;"%> 
		</div>
		<div class="form-group">
			<%= f.text_field :subject, :required => '', placeholder: 'Subject',:style => "width: 80%;"  %>
		</div>
		<div>   
			<%= f.text_area(:textmsg, :required => '', placeholder: 'write the message here and click send', :class => 'textarea', :style => "width: 80%; height: 125px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;") %>
		</div>
		<br>
		<div class="box-footer clearfix">
			<%= f.submit "Send Email", :style => 'width: 80%' %>
		</div>
		<% end %> 
	</div> 
</div>

</section>
</aside>