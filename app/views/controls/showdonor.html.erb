<script src="https://maps.googleapis.com/maps/api/js?sensor=false&amp;libraries=places" type="text/javascript"></script>

<link rel="stylesheet" href="//code.jquery.com/ui/1.11.0/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/ui/1.11.0/jquery-ui.js"></script>

<script type="text/javascript">
 function initialize() {
  var input = document.getElementById('searchTextField');
  var autocomplete = new google.maps.places.Autocomplete(input);
  google.maps.event.addListener(autocomplete, 'place_changed', function () {
    var place = autocomplete.getPlace();
    document.getElementById('addName').value = document.getElementById('searchTextField').value;
    document.getElementById('addLat').value = place.geometry.location.lat();
    document.getElementById('addLng').value = place.geometry.location.lng();
  });
}
google.maps.event.addDomListener(window, 'load', initialize); 
</script> 

<% content_for :title, "Edit Donor" %> 
<div align="center">

  <%=form_for :controls, url: url_for( :controller => :admincommands, :action => :update_donor ) do |f| %> 

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :value => @user.name %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, :value => @user.email  %>
  </div>

  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone, :value => @user.phone %>
  </div>
  
  <div class="field">
    <%= f.label :gender %><br />
    <%= f.select :gender, options_for_select([["Male", "male"], ["Female", "female"]],@user.gender) %>
  </div>


  <div class="field">
    <%= f.label :'blood type' %><br />
    <%= f.select :blood_type, options_for_select([["A+","A+"],["A-","A-"],
      ["B+","B+"],["B-","B-"],
      ["O+","O+"],["O-","O-"],
      ["AB+","AB+"],["AB-","AB-"]], @user.blood_type) %> 
    </div>

    <div class="field">
      <%= f.label :address %><br />
      <input id="searchTextField" type="text" size="50" placeholder="Enter a location" autocomplete="on" runat="server" value="<%= @user.location_name %>" /> 

      <%= f.text_field :location_name, autofocus: true, id: 'addName', hidden: true, :value => @user.location_name %>
      <%= f.text_field :location_lat, autofocus: true, id: 'addLat', hidden: true, :value => @user.location_lat %> 
      <%= f.text_field :location_lng, autofocus: true, id: 'addLng', hidden: true, :value => @user.location_lng %>
    </div>
    
    <div class="field">
      <%= f.label :'birth date' %><br />
      <%= f.text_field :birth_date, :id=>"birth_date", :value => @user.birth_date  %>
      <script type="text/javascript">
        $(function() {
          $( "#birth_date" ).datepicker({changeYear: true, yearRange : '-100:+0',dateFormat: 'yy-mm-dd'});
        });
      </script>
    </div>

    <div class="field">
      <%= f.label :'national ID' %><br />
      <%= f.text_field :nationalid, autofocus: true, :value => @user.nationalid  %>
    </div>
    
    <div class="field">
      <%= f.label :'last donation date' %><br />
      <%= f.text_field :lastdonation, :id=>"lastdonation", :value => @user.lastdonation  %>
      <script type="text/javascript">
        $(function() {
          $( "#lastdonation" ).datepicker({changeYear: true, yearRange : '-100:+0',dateFormat: 'yy-mm-dd'});
        });
      </script>
    </div>
    
    <div class="field">
      <%= f.label :'number of active requests' %><br />
      <%= f.text_field :num_of_active_requests, autofocus: true, :value => @user.num_of_active_requests  %>
    </div>
    

    <div class="field">
      <%= f.label :'number of saved people' %><br />
      <%= f.text_field :savedpeople, autofocus: true, :value => @user.savedpeople  %>
    </div>
    <hr>
    <div class="field">
      <%= f.label :'can donate ?' %><br />
      <%= f.select :can_donate, options_for_select([["True", "true"], ["False", "false"]],@user.can_donate) %>
    </div>
    <hr>
    <div class="field">
      <%= f.label "Hide Account Information" %><br />
      <%= f.select :hide_account, options_for_select([["False", "false"], ["True", "true"]], @user.hide_account) %>
    </div>
    <hr>
    <div class="field">
    <%= f.label "Stop receiving Messages by email when new cases matches my blood type" %><br />
    <%= f.select :stop_getting_email, options_for_select([["False", "false"], ["True", "true"]], @user.stop_getting_email) %>
    </div>
    <hr>
    <div class="field">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "off", :value => @user.password  %>
    </div> 

    <div class="actions">
      <%= f.submit "Update Info" %>
    </div>
    <% end %> 
    <div>
      <%=form_for :controls, url: url_for( :controller => :admincommands, :action => :deletedonor ) do |f| %> 

      <div class="field"> 
        <%= f.text_field :user_id, :hidden => true, :value => @user.id %> 
        <%= f.submit "Cancel this Donor account" %>
      </div>

      <% end %> 
    </div>
  </div>